---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Heart, Star, Stethoscope, Users } from "lucide-react";
import Layout from "@/components/Layout.astro";
import joimage from "../../public/jo.jpeg";
---

<Layout title="Dr. Jyotsna Singh">
  <div class="flex flex-col min-h-screen">
    <header class="px-6 lg:px-6 h-14 flex items-center">
      <a class="flex items-center justify-center gap-2 font-bold" href="#">
        <Stethoscope className="h-6 w-6" />
        <span>Dr. Jyotsna Singh</span>
        <span class="sr-only">Acme Pediatrics</span>
      </a>
      <nav class="ml-auto flex gap-4 sm:gap-6">
        <a
          class="text-sm font-medium hover:underline underline-offset-4"
          href="#about">About</a
        >
        <a
          class="text-sm font-medium hover:underline underline-offset-4"
          href="#services">Services</a
        >
        <a
          class="text-sm font-medium hover:underline underline-offset-4"
          href="#testimonials">Testimonials</a
        >
        <a
          class="text-sm font-medium hover:underline underline-offset-4"
          href="#contact">Contact</a
        >
      </nav>
    </header>
    <main class="flex-1">
      <section
        class="grid place-content-center py-12 md:py-24 lg:py-32 xl:py-48"
      >
        <div class="container px-4 md:px-6">
          <div class="flex flex-col items-center space-y-4 text-center">
            <div class="space-y-2">
              <h1
                class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
              >
                The Best Care for Your Little Ones
              </h1>
              <p class="mx-auto max-w-[700px] text-gray-500 md:text-xl">
                Providing compassionate and comprehensive pediatric care for
                your children's health and well-being.
              </p>
            </div>
            <div class="space-x-4">
              <Button client:load>Book Appointment</Button>
              <Button client:load variant="outline">
                <a href="#about">Learn More</a>
              </Button>
            </div>
          </div>
        </div>
      </section>
      <section
        id="about"
        class="grid lg:grid-cols-2 place-content-center bg-gray-100"
      >
        <div class="grid place-content-center p-6 md:p-8">
          <div
            class="flex flex-col items-center justify-center space-y-4 text-center"
          >
            <div class="space-y-6">
              <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
                About Dr. Jyotsna Singh
              </h2>
              <p
                class="max-w-[900px] text-left text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
              >
                A thorough professional with more than 6 years experience in
                diagnosing and treating pediatric patients from age 1 day of
                life to adolescents. I have worked in tertiary level NICU(and
                have had under my care preterms, very low birth weight babies,
                babies with respiratory distress, septicemia and other
                illnesses) and PICU. Have experience in diagnosis and treatment
                of various infectious diseases, metabolic diseases,
                hematological, neurological, respiratory and gastro-intestinal
                problems and growth-related issues. I am a member of the Indian
                Academy of Pediatrics and am constantly updating my knowledge of
                the new and upcoming changes in pediatric care.
              </p>
            </div>
          </div>
        </div>
        <img src={joimage.src} alt="image description" />
      </section>
      <section
        id="services"
        class="grid place-content-center py-12 md:py-24 lg:py-32"
      >
        <div class="container px-4 md:px-6">
          <h2
            class="text-3xl font-bold tracking-tighter sm:text-5xl text-center mb-12"
          >
            Our Services
          </h2>
          <div class="grid gap-10 sm:grid-cols-2 md:grid-cols-3">
            <div
              class="flex flex-col items-center space-y-2 border-gray-800 p-4 rounded-lg"
            >
              <Heart className="h-12 w-12 mb-2" />
              <h3 class="text-xl font-bold">Preventive Care</h3>
              <p class="text-gray-500 text-center">
                Regular check-ups and vaccinations to keep your child healthy.
              </p>
            </div>
            <div
              class="flex flex-col items-center space-y-2 border-gray-800 p-4 rounded-lg"
            >
              <Stethoscope className="h-12 w-12 mb-2" />
              <h3 class="text-xl font-bold">Illness Treatment</h3>
              <p class="text-gray-500 text-center">
                Expert care for common childhood illnesses and conditions.
              </p>
            </div>
            <div
              class="flex flex-col items-center space-y-2 border-gray-800 p-4 rounded-lg"
            >
              <Users className="h-12 w-12 mb-2" />
              <h3 class="text-xl font-bold">Family Education</h3>
              <p class="text-gray-500 text-center">
                Guidance on nutrition, development, and parenting strategies.
              </p>
            </div>
          </div>
        </div>
      </section>
      <section
        id="testimonials"
        class="grid place-content-center py-12 md:py-24 lg:py-32 bg-gray-100"
      >
        <div class="container px-4 md:px-6">
          <h2
            class="text-3xl font-bold tracking-tighter sm:text-5xl text-center mb-12"
          >
            What Parents Say
          </h2>
          <div class="grid gap-10 sm:grid-cols-2 md:grid-cols-3">
            {
              [1, 2, 3].map((i) => (
                <div class="flex flex-col items-center space-y-2 border-gray-800 p-4 rounded-lg bg-white">
                  <Star className="h-6 w-6 text-yellow-500" />
                  <p class="text-gray-500 text-center italic">
                    "Dr. Smith is amazing with our kids. She always takes the
                    time to listen and explain everything."
                  </p>
                  <p class="font-semibold">- Happy Parent {i}</p>
                </div>
              ))
            }
          </div>
        </div>
      </section>
      <section
        id="contact"
        class="grid place-content-center py-12 md:py-24 lg:py-32"
      >
        <div class="container px-4 md:px-6">
          <div class="flex flex-col items-center space-y-4 text-center">
            <div class="space-y-2">
              <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
                Contact Us
              </h2>
              <p
                class="max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
              >
                Have questions or want to schedule an appointment? Get in touch
                with us.
              </p>
            </div>
            <div class="w-full max-w-sm space-y-2">
              <form class="flex flex-col gap-4 space-y-4">
                <Button client:load>Book Appointment</Button>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
    <footer
      class="flex flex-col gap-2 sm:flex-row py-6 w-full shrink-0 items-center px-4 md:px-6 border-t"
    >
      <p class="text-xs text-gray-500">
        Â© 2023 Acme Pediatrics. All rights reserved.
      </p>
      <nav class="sm:ml-auto flex gap-4 sm:gap-6">
        <a class="text-xs hover:underline underline-offset-4" href="#"
          >Terms of Service</a
        >
        <a class="text-xs hover:underline underline-offset-4" href="#"
          >Privacy</a
        >
      </nav>
    </footer>
  </div>
</Layout>
